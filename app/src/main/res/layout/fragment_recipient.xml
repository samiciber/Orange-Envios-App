<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".gestion.RecipientFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:src="@drawable/img_9"
            android:scaleType="centerCrop"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="450dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/toggle_group_recipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    android:textStyle="bold" />

                <Switch
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:checked="true"
                    android:thumbTint="@android:color/holo_red_dark"
                    android:trackTint="@android:color/holo_red_light"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="RUC"
                    android:textStyle="bold" />

                <Switch
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:checked="false"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="CE"
                    android:textStyle="bold" />

                <Switch
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:checked="false" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_dni_recipient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DNI"
                    android:inputType="number"
                    android:drawableEnd="@android:drawable/ic_menu_close_clear_cancel"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/toggle_group_recipient" />

                <EditText
                    android:id="@+id/et_name_recipient"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Nombres"
                    android:inputType="textPersonName"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/et_dni_recipient" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_surnames_recipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Apellido Paterno"
                    android:layout_marginEnd="4dp"
                    android:inputType="textPersonName" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Apellido Materno"
                    android:layout_marginStart="4dp"
                    android:inputType="textPersonName" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_phone_recipient"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="TelÃ©fono"
                    android:inputType="phone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/layout_surnames_recipient" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_register_recipient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar destinatario"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/et_phone_recipient" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>