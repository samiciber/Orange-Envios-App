<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD">

    <!-- TÍTULO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimación de la Tarifa"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

    <!-- IMAGEN SUPERIOR -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/img_11"
        android:scaleType="centerCrop"
        android:contentDescription="Tarifa" />

    <!-- TIPO DE PAQUETE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/outline_deployed_code_24"
            android:tint="#D32F2F"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/tv_tipo_paquete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sobre (Documentos simples en sobre manila / Tamaño A4)"
            android:textColor="#424242"
            android:textSize="14sp"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- CANTIDAD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_menos"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textSize="20sp"
            app:strokeColor="#D32F2F"
            app:cornerRadius="24dp" />

        <TextView
            android:id="@+id/tv_cantidad"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mas"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="20sp"
            app:strokeColor="#D32F2F"
            app:cornerRadius="24dp" />

    </LinearLayout>

    <!-- SEPARADOR -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginHorizontal="24dp" />

    <!-- RUTA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp">

        <!-- ORIGEN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_location_on_24"
                android:tint="#D32F2F"
                tools:ignore="UseAppTint" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_origen_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bambamarca"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_origen_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cajamarca/hualgayoc/bambamarca"
                    android:textColor="#757575"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_adjust_24"
                android:tint="#D32F2F"
                tools:ignore="UseAppTint" />
        </LinearLayout>

        <!-- DESTINO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_location_on_24"
                android:tint="#D32F2F"
                tools:ignore="UseAppTint" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_destino_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av Parra 379 Co"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_destino_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="arequipa/arequipa/arequipa/av parra 379 co"
                    android:textColor="#757575"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_adjust_24"
                android:tint="#D32F2F"
                tools:ignore="UseAppTint" />
        </LinearLayout>

    </LinearLayout>

    <!-- SEPARADOR -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginHorizontal="24dp" />

    <!-- DISTANCIA (NUEVO) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/outline_flight_takeoff_24"
            android:tint="#1976D2"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/tv_distancia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00 km"
            android:textColor="#424242"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- PRECIO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/moneda"
            android:tint="#D32F2F"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/tv_precio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S/ 8.00"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- BOTÓN CONTINUAR -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continuar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continuar"
        android:textColor="@android:color/white"
        app:backgroundTint="#D32F2F"
        app:cornerRadius="28dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp" />

</LinearLayout>