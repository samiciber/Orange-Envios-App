<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD"
    android:padding="24dp"
    android:gravity="center">

    <!-- IMAGEN CAJA -->
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/img_10"
        android:layout_marginBottom="32dp" />

    <!-- TÍTULO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Gracias por enviar\ncon Shalom!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu envío ha sido registrado."
        android:textSize="16sp"
        android:textColor="#424242"
        android:layout_marginBottom="24dp" />

    <!-- N° ORDEN -->
    <TextView
        android:id="@+id/tvOrderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N° de orden 60921008 | Código 3TJ"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <!-- ADVERTENCIA -->
    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#757575"
        android:textSize="14sp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- BOTONES -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDownload"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Descargar"
        android:textColor="#D32F2F"
        app:strokeColor="#D32F2F"
        app:cornerRadius="12dp"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewDetails"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Ver Detalle"
        android:textColor="@android:color/white"
        app:backgroundTint="#D32F2F"
        app:cornerRadius="12dp"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNewOrder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Registrar otro envío"
        android:textColor="@android:color/white"
        app:backgroundTint="#1A237E"
        app:cornerRadius="12dp" />

</LinearLayout>